<div class="center">
  <h1>Signup</h1>
  <form method="post">
    <div class="txt_field">
      <input type="text" required>
      <span></span>
      <label>Full name</label>
    </div>
    <div class="txt_field">
      <input type="email" required>
      <span></span>
      <label>Email</label>
    </div>
    <div class="txt_field">
      <input type="password" required>
      <span></span>
      <label>Password</label>
    </div>
    <div class="txt_field">
      <input type="password" required>
      <span></span>
      <label>Confirm Password</label>
    </div>
